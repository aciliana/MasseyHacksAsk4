<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chicken Salad"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients "
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="@color/purple"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1/2 cup mayonnaise                                                                             1 tablespoon lemon juice                                                            1/4 teaspoon ground black pepper"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2 cups chopped, cooked chicken meat                                        1/2 cup blanched slivered almonds                                                1 stalk celery, chopped"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Instructions"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="1. Place almonds in a frying pan. Toast over medium-high heat, shaking frequently. Watch carefully, as they burn easily."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="2. In a medium bowl, mix together mayonnaise, lemon juice, and pepper. Toss with chicken, almonds, and celery."/>
</LinearLayout>