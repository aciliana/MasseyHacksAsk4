<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E2E3E4"

    tools:context="com.alicia.masseyhacksdemo.Stain">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stains"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/chooseClothing"
        android:paddingTop="5dp"
        android:text="@string/clothing_prompt"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"/>
    <Spinner
        android:id="@+id/clothingSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/clothing_arrays"
        android:layout_below="@+id/chooseClothing"
        android:layout_marginBottom="10dp"
        android:prompt="@string/clothing_prompt"/>
    <TextView
        android:id="@+id/chooseTextile"
        android:text="@string/textile_prompt"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothingSpinner"
        />
    <Spinner
        android:id="@+id/textileSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/textile_arrays"
        android:prompt="@string/clothing_prompt"
        android:layout_below="@+id/chooseTextile"
        android:layout_marginBottom="10sp"
        />
    <TextView
        android:id="@+id/chooseStain"
        android:paddingTop="5dp"
        android:text="@string/stain_prompt"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textileSpinner"
        />
    <Spinner
        android:id="@+id/stainSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/stain_arrays"
        android:prompt="@string/clothing_prompt"
        android:layout_below="@+id/chooseStain"
        />
    <Button
        android:id="@+id/goButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_boarder"
        android:text="Go" />


</RelativeLayout>